{
    "name": "andrzejkupczyk/ddd-building-blocks",
    "description": "Domain-Driven Design components implementation",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrzej Kupczyk",
            "email": "kontakt@andrzejkupczyk.pl",
            "homepage": "https://andrzejkupczyk.pl"
        }
    ],
    "require": {
        "php": "^7.2",
        "andrzejkupczyk/ddd-generic-subdomain": "^1.0",
        "beberlei/assert": "^3.2",
        "myclabs/php-enum": "^1.7",
        "ramsey/uuid": "^3.8"
    },
    "require-dev": {
        "andrzejkupczyk/phpqa": "^1.0",
        "phpspec/phpspec": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "WebGarden\\Model\\": "src/"
        }
    },
    "scripts": {
        "test": "phpspec run --ansi",
        "analyse": [
            "phpmd src text cleancode,codesize,controversial,design,unusedcode,naming",
            "phpcpd --min-tokens=20 src",
            "phpcs --standard=PSR2 src",
            "phpstan analyse --level max --no-progress src",
            "php-cs-fixer fix --dry-run"
        ],
        "cs:fix": "php-cs-fixer fix",
        "ci": [
            "@test",
            "@analyse"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0-dev"
        }
    },
    "config": {
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
